<body>
    <div id="wrap">
        @if (User.Identity.IsAuthenticated)
        {
    <!-- Wrap all page content here -->


        <!-- Fixed navbar -->
            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Time Sheet Management</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">

                            <li class="dropdown ">
                                <a href="#" id="drop2" data-toggle="dropdown" class="dropdown-toggle" role="button">
                                    Timesheet <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                                    <li><a asp-controller="TimeInTimeOutData" asp-action="ManageTimeInTimeOutData">Manage Time Sheets</a></li>
                                    <li><a asp-controller="TimeInTimeOutData" asp-action="GenerateTimeSheetDetailData">Generate Time Sheets</a></li>
                                    <li><a asp-controller="TimeInTimeOutData" asp-action="ViewPreviousMonthTimeSheetData">View Past months Time Sheets</a></li>
                                    <li class="divider"></li>
                                    @*<li><a asp-controller="TimeInTimeOutData" asp-action="ViewTimeSheetDetailData">View Timesheet</a></li>
                                        <li><a asp-controller="TimeInTimeOutData" asp-action="UpdateTimeSheetDetailData">Update Timesheet</a></li>*@
                                    <li><a asp-controller="TimeSheetDetails" asp-action="CreateTimeSheetDetail">Create TimeSheet Manually</a></li>
                                </ul>
                            </li>

                        </ul>
                        @await Html.PartialAsync("_LoginPartial")
                    </div><!--/.nav-collapse -->
                </div>
            </div>}
        else
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand">Time Sheet Manager</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>

        }

        <div class="container container-fluid">
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
    </div><!-- end of div with id="wrap"-->
    <footer class="footer">
        <div class="container">
            <p class="text-muted">Copyright of Oschool TMS</p>
        </div>
    </footer>




</body>
</html>
