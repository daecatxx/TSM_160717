                    { text: 'Account name', datafield: 'customerAccountName', width: 150, renderer: headerRenderer },
                    { text: 'Date of lesson', datafield: 'dateOfLesson', width: 140, cellsformat: 'ddd - d/M/yyyy' ,renderer: headerRenderer },
