        var currentYear = new Date().getFullYear();
        var minYear = currentYear - 3;
        var maxYear = currentYear + 3;
        var sourceYear = [];
        var index = 0;
        for (value = minYear; value <= maxYear; value++) {
            sourceYear[index] = { text: value, value: value };
            index++;
        }

        var source =
            {
                datatype: 'json',
                datafields: [
                    { name: 'text' } ,{ name:'value'}
                ],
